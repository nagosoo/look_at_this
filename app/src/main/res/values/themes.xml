<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.LookAtThis" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/yellow</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.LookAtThis" parent="Base.Theme.LookAtThis" />

    <style name="Text.Normal" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/uhheekangja</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/uhheekangjabold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Normal.8" parent="Text.Normal">
        <item name="android:textSize">@dimen/text_size_8</item>
    </style>

    <style name="Text.Normal.11" parent="Text.Normal">
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

    <style name="Text.Normal.16" parent="Text.Normal">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="Text.Normal.20" parent="Text.Normal">
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="Text.Bold.13" parent="Text.Bold">
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="Text.Bold.15" parent="Text.Bold">
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="Text.Bold.20" parent="Text.Bold">
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="Text.Bold.22" parent="Text.Bold">
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="Text.Bold.24" parent="Text.Bold">
        <item name="android:textSize">@dimen/text_size_24</item>
    </style>

    <style name="Text.Bold.28" parent="Text.Bold">
        <item name="android:textSize">@dimen/text_size_28</item>
    </style>

    <style name="Text.Bold.32" parent="Text.Bold">
        <item name="android:textSize">@dimen/text_size_32</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_background</item>
        <item name="android:textColor">@color/selector_button_text_color</item>
    </style>

    <style name="AppButtonLargeStyle" parent="AppButtonStyle">
        <item name="android:layout_width">147dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAppearance">@style/Text.Bold.24</item>
    </style>

    <style name="AppButtonMediumStyle" parent="AppButtonStyle">
        <item name="android:layout_width">97dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textAppearance">@style/Text.Bold.20</item>
    </style>

    <style name="AppButtonSmallStyle" parent="AppButtonStyle">
        <item name="android:layout_width">79dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:textAppearance">@style/Text.Bold.13</item>
    </style>

    <style name="AppSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:switchMinWidth">75dp</item>
        <item name="android:background">@null</item>
        <item name="android:thumb">@drawable/toggle_thumb</item>
        <item name="android:track">@drawable/selector_toggle_track</item>
    </style>

    <style name="CommonDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:minHeight">400dp</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="TimePickerDialogStyle">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
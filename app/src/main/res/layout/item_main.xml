<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/rectangular_grey_light_radius_8"
        android:contentDescription="@string/content_description_main_image"
        android:scaleType="centerCrop"
        android:src="@drawable/error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/Text.Normal.13"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/rectangular_grey_light_radius_4"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingStart="6dp"
        android:paddingTop="3dp"
        android:paddingEnd="6dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 푸바오 귀엽쥬 " />

    <TextView
        android:id="@+id/tv_date"
        style="@style/Text.Normal.11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/tv_content"
        app:layout_constraintStart_toStartOf="@id/tv_content"
        tools:text="20231130" />

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="@string/content_description_like"
        android:src="@drawable/heart"
        app:layout_constraintBottom_toBottomOf="@id/tv_content"
        app:layout_constraintEnd_toEndOf="@id/tv_content" />


</androidx.constraintlayout.widget.ConstraintLayout>